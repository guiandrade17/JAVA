import java.util.Scanner;

public class MensagemCodificada {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite uma palavra: ");
        String palavra = scanner.nextLine();

        // Pegando a primeira e a Ãºltima letra
        char primeiraLetra = palavra.charAt(0);
        char ultimaLetra = palavra.charAt(palavra.length() - 1);

        // Calculando o tamanho da palavra
        int tamanho = palavra.length();

        // Exibindo a mensagem codificada
        System.out.println("Mensagem codificada: " + primeiraLetra + " " + ultimaLetra + " " + tamanho);

        scanner.close();
    }
}
